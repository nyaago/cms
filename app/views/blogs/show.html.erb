<h1>
  <% if @article %>
  <%= @article.title %>
  <% else %>
  <%= BlogArticle.model_name.human %>
  <% end %>
</h1>
<div class="date" id="updated_at">
  <span class="label"><%= BlogArticle.human_attribute_name(:updated_at) %>:</span>
  <span class="value"><%= format_date(@article.updated_at) %></span>
</div>
<p id="notice"><%= notice %></p>

<% if @article %>
<p id="content" class="article">
  <%= @article.content.html_safe %>
</p>


<% else %>  
  <p class='not_found warning'>
    指定された<%= BlogArticle.human_name %>はみつかりません
  </p>
<% end %>

<div class="actions">  
</div>