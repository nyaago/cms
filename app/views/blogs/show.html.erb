<h1>
  <%= @article.title %>
</h1>
<div class="date" id="updated_at">
  <span class="label">投稿更新日:</span>
  <span class="value"><%= format_date(@article.updated_at) %></span>
</div>
<p id="notice"><%= notice %></p>

<% if @article %>
<p id="content">
  <%= @article.content.html_safe %>
</p>


<% else %>  
  <p class='not_found'>
    指定された記事はみつかりません
  </p>
<% end %>

<div class="actions">  
<%= link_to_function '戻る', "history.back();return false;" %>
</div>