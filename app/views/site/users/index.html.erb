  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= h(user.login) %></td>
    <td><%= link_to 'Show', { :action => :show, :id => user.id } %></td>
    <td><%= link_to 'Edit', { :action => :edit, :id => user.id } %></td>
    <td><%= link_to 'Destroy', { :action => :destroy, :id => user.id }, 
    :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

