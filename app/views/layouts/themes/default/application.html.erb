  <meta name="google-site-verification" content="q8IDxkNLwaG6KI-_Hx_G1LUj8P6MuD0u4B69cfJQfCw" />
  
  <%= title_tag %>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" /> 
  <%= meta_keywords_tag %>
  <%= meta_description_tag %>
  <meta name="robots" content="all" /> 
  
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag "jquery.lightbox-0.5" %>
  <%= csrf_meta_tag %>
  <%= stylesheet_link_tag "common", :media => :all %>
  <%= stylesheet_link_tag "jquery.lightbox-0.5", :media => :all %>
  <%= site_stylesheet_link_tags :media => :all %>
  <%= rss_link_for_addressbar.html_safe %>
  <style type="text/css">
  <!--
  #body {
      <%= background_css %>
  }
  
  -->
  </style>
  
  <script type="text/javascript" charset="utf-8">
    
    jQuery(function($){
        $('a.lightbox').lightBox(); 
    });
  
  </script>
  
