<body>
    
<header>
  <%= render_theme_partial :header %>
  <%= render_eye_catch_if_required :header %>
</header>   <!-- header -->
<nav> 
<%= menu_html :id => :header_menu, :class => :menu %>
</nav>

<div id="container">

<%= render_eye_catch_if_required :container %>


<div id="main_content">
<section> 
<%= render_eye_catch_if_required :contents %>

<%= yield %>
</section> 
</div>   <!-- main_content -->

<aside>


<%= render_theme_partial :side %>

</aside>   <!-- side -->

</div>

<footer> 

    <%= render_theme_partial :footer %>
</footer>

<address><%= copyright %></address> 

<%= analystic_javascript_tag %>
</body>
</html>
