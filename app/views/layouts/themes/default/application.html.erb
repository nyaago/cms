<!DOCTYPE html>
<html>
<head>
  <%= title_tag %>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" /> 
  <%= meta_keywords_tag %>
  <%= meta_description_tag %>
  <meta name="robots" content="all" /> 
  
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <%= stylesheet_link_tag "common", :media => :all %>
  <%= site_stylesheet_link_tags :media => :all %>
  
  <style type="text/css">
  <!--
  <%= background_css %>
  -->
  </style>
  
</head>
<body>
    
<div id="header">
    <%= render_theme_partial :header %>
    <%= render_eye_catch_if_required :header %>
</div>   <!-- header -->

<div id="container">

<%= render_eye_catch_if_required :container %>

<div id="contents">

<%= render_eye_catch_if_required :contents %>

<%= yield %>

</div>   <!-- contents -->

<div id="side">


<%= render_theme_partial :side %>

</div>   <!-- side -->

<div style="clear: both;"></div>

</div>   <!-- container -->

<div class="footer">
    <%= render_theme_partial :footer %>
</div>

</body>
</html>
