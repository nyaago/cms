<!DOCTYPE html>
<html>
<head>
  <%= title_tag %>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" /> 
  
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <%= javascript_include_tag "jquery-ui.min" %>
  <%= stylesheet_link_tag "sunny/jquery-ui" %>
  <%= javascript_include_tag "jquery.ui.datepicker-ja" %>
  <%= stylesheet_link_tag "site_admin" %>
  <%= stylesheet_link_tag "#{params[:controller]}" %>
  <%= javascript_include_tag "#{params[:controller]}" %>
</head>
<body>
    
<header>
    <%= render "/layouts/site/header" %>
</header>   <!-- header -->

<div id="content">

  <div class="main">

  <%= yield %>

  </div>   <!-- main -->

<aside>


<%= render "/layouts/site/side" %>

</aside>   <!-- side -->




</div>   <!-- container -->

<footer>
    <%= render "/layouts/site/footer" %>
</footer>

</body>
</html>
